{
    "compilerOptions": {
        "outDir": "lib",
        "moduleResolution": "node",
        "module": "commonjs",
        "target": "es5",
        "noImplicitAny": false,
        "sourceMap": false,
        "jsx": "react",
        "allowJs": false,
        "noImplicitThis": true,
        "removeComments": false,
        "skipDefaultLibCheck": true,
        "skipLibCheck": true,
        "downlevelIteration": true,
        "lib": [
            "es2015.promise",
            "es2015.iterable",
            "dom",
            "es5",
            "scripthost",
            "es2015.core",
            "es2015.collection"
        ],
        "allowSyntheticDefaultImports": true,
        "experimentalDecorators": true
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "lib"
    ]
}